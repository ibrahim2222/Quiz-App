@model List<Cuba_Staterkit.Models.Session>

<div class="page-body">
    <div class="container-fluid">
        <!-- Your existing HTML code for breadcrumbs and page title -->
        <!-- Check if there are any sessions in the model -->
        @if (Model.Any())
        {
            <!-- Loop through each session and display relevant information -->
            @foreach (var session in Model)
            {
                <div class="row mt-3">
                    <div class="col-sm-12 col-xl-12">
                        <div class="card card-absolute  border border-secondary">
                            <div class="card-header bg-primary" style="top: -46px;">
                                <h4 class="text-white">@session.Name </h4>
                            </div>
                            <div class="card-body align-items-center justify-content-center text-center">
                                <div class="widget-content">
                                    <div class="row">
                                        <div class="col-sm-12 col-xl-4">
                                            @if (session != null)
                                            {
                                                <div class="card card-absolute widget-hover border border-secondary" style="transition: 1s;">
                                                    @if (session.quiz != null)
                                                    {
                                                        <div class="card-header bg-primary rounded-pill">
                                                            <h5 class="text-white">@session.quiz.Name</h5>
                                                        </div>
                                                        <div class="card-body align-items-center justify-content-center text-center">
                                                            <div class="widget-content">
                                                                <div class="">
                                                                    <h5>Creation Date : <span class="badge rounded-pill badge-light-warning"></span> </h5>
                                                                </div>
                                                                <div class="mt-3">
                                                                    <div class="whatsnew-btn"><a class="btn btn-warning rounded-pill" asp-controller="Published" asp-action="Edit" asp-route-quizid="@session.quiz.Id">Edit</a></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (session.homework != null)
                                                    {
                                                        <div class="card-header bg-primary rounded-pill">
                                                            <h5 class="text-white">@session.homework.Name</h5>
                                                        </div>
                                                        <div class="card-body align-items-center justify-content-center text-center">
                                                            <div class="widget-content">
                                                                <div class="">
                                                                    <h5>Date : <span class="badge rounded-pill badge-light-success">ss</span> </h5>
                                                                </div>
                                                                <div class="mt-3">
                                                                    <div class="whatsnew-btn"><a class="btn btn-outline-primary rounded-pill" asp-controller="MQaber" asp-action="TfaseelMQbraa">Details</a></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                    
                                                </div>
                                                
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Display this block if there are no sessions -->
            <div class="card mb-5 w-50 mx-auto d-flex justify-content-center align-items-center border border-secondary rounded-pill">
                <div class="row g-0 text-center">
                    <h2 class="mb-0"><img width="70" height="70" src="https://img.icons8.com/fluency/70/cancel.png" alt="cancel" /> No published Assesments</h2>
                </div>
            </div>
        }
    </div>
</div>

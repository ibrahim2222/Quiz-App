@model IEnumerable<Cuba_Staterkit.Models.HomeWork>

<div class="page-body">

    <div class="container-fluid">
        <div class="page-title" style="margin-top: -29px !important;">
            <div class="row">
                <div class="col-6">
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="btn btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#backDropModal2"><i class="fas fa-plus-circle me-1"></i> Add</a></li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-12 col-xl-12">
                <div class="card-body align-items-center justify-content-center text-center">
                    <div class="widget-content">

                        <div class="row">
                            @if (Model.Count() > 0)
                            {
                                foreach (var homeWork in Model)
                                {
                                    <div class="col-sm-12 col-xl-4">
                                        <div class="card card-absolute widget-hover border border-secondary" style="transition: 1s;">
                                            <div class="card-header bg-primary rounded-pill">
                                                <h5 class="text-white">@homeWork.Session.Name </h5>
                                            </div>
                                            <div class="card-body align-items-center justify-content-center text-center">
                                                <div class="widget-content">
                                                    <div class="">
                                                        <h5>Quiz Name : <span class="badge rounded-pill badge-light-warning">@homeWork.Name</span> </h5>
                                                    </div>
                                                    <div class="mt-3">
                                                        <div class="whatsnew-btn"><a class="btn btn-warning rounded-pill">Edit</a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <h1>No Homeworks Created Yet</h1>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="backDropModal2" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <form class="modal-content" asp-action="CreateHomework" asp-controller="HomeWork">
            <div class="modal-header">
                <h5 class="modal-title" id="backDropModalTitle"><img width="90" height="90" src="https://img.icons8.com/bubbles/90/classroom.png" alt="classroom" /> Create Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row g-2">
                    <div class="col mb-2">
                        <label for="emailBackdrop" class="form-label"><i class="fas fa-sort-numeric-up-alt"></i> <strong>Session Name</strong></label>
                        <input type="text" id="emailBackdrop" name="SessionName" class="form-control rounded-pill" placeholder="Example: Session 1">
                    </div>
                </div>

                <div class="row g-2">
                    <div class="col mb-2">
                        <label for="dobBackdrop" class="form-label"><i class="fas fa-signature"></i> <strong>Homework Name</strong></label>
                        <input type="text" id="dobBackdrop" name="HomeworkName" class="form-control rounded-pill" placeholder="Example: Quiz 1">
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary rounded-pill">Save</button>
            </div>
        </form>
    </div>
</div>





@model SmartHome_Project.ViewModels.RegisterUserVM

@{
    ViewData["Title"] = "Login Simple";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}
<div class="row m-0">
    <div class="col-12 p-0">
        <div class="login-card">
            <div>
                <div style="text-align: center;line-height: 90px;" class="mb-4">
                    <img width="120" height="120" src="https://img.icons8.com/glyph-neue/120/module.png" alt="module" />
                </div>
                <div class="login-main">
                    <form class="theme-form" asp-action="Register" asp-controller="Account">
                        <div asp-validation-summary="All" class="text-danger mb-2"></div>

                        <h4>Sign Up to your account</h4>
                        <div class="form-group mt-4">
                            <label asp-for="UserName" class="float-start mb-2"></label>
                            <input class="form-control bg-transparent text-black rounded-pill" asp-for="UserName" placeholder="Enter your Username">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="float-start mb-2"><i class="fas fa-signature text-primary"></i> Password</label>

                            <div class="form-input position-relative">
                                <input class="form-control bg-transparent text-black rounded-pill" asp-for="Password" placeholder="Enter your password">
                            </div>
                        </div>
                        <div class="form-group mb-0">
                          
                            <div class="text-end mt-3">
                                <button class="btn btn-primary btn-block w-100" type="submit" asp-controller="Account" asp-action="Register">Sign Up</button>
                            </div>
                        </div>
                        <p class="mt-4 mb-0 text-center">Already have account?<a class="ms-2" asp-controller="Account" asp-action="Login">Create Account</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

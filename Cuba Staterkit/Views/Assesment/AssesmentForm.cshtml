@model ClassSessionVm;
@{
    ViewData["Title"] = "Assesment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-body">
    <div class="container-fluid">


        <div class="page-title" style="margin-top: -29px !important;">
            <div class="row">
                <div class="col-6">
                   
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Assesment</li>

                    </ol>
                </div>
            </div>
        </div>
        <div class="card mb-5 w-50 mx-auto d-flex justify-content-center align-items-center border border-secondary rounded-pill">
            <div class="row g-0 text-center">
                <h2 class="mb-0"><img width="70" height="70" src="https://img.icons8.com/plasticine/70/general-mandatory-action.png" alt="general-mandatory-action" /> Actions</h2>
            </div>
        </div>
        <div class="row">

            <div class="col-xl-6">
                <div class="card border border-secondary">
                    <div class="card-body pt-2 ">
                        <div class="row align-items-center">
                            <div class="col">
                                <h5 class="card-title">Quizes </h5>
                                <p class="card-text">
                                    Create your Own Quiz's
                                </p>
                                <a class="btn btn-primary" asp-controller="Assesment" asp-action="GradeLevelForm"><i class="fas fa-folder-open me-1"></i> Open</a>
                            </div>
                            <div class="col">
                                <img class="card-img card-img-right" src="~/assets/images/dashboard/222.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="card border border-secondary">
                    <div class="card-body pt-2">
                        <div class="row align-items-center">
                            <div class="col">
                                <h5 class="card-title">Homeworks </h5>
                                <p class="card-text">
                                    Create your Own Homework's
                                </p>
                                <a class="btn btn-primary" asp-controller="HomeWork" asp-action="AllHomeworks"><i class="fas fa-folder-open me-1"></i> Open</a>
                            </div>
                            <div class="col">
                                <img class="card-img card-img-right" src="~/assets/images/dashboard/111.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>




<div class="modal fade" id="backDropModal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <form class="modal-content" asp-action="CreateQuiz" asp-controller="Quiz">
            <div class="modal-header">
                <h5 class="modal-title" id="backDropModalTitle"><img width="90" height="90" src="https://img.icons8.com/bubbles/90/classroom.png" alt="classroom" /> Create Session</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row g-2">
                    <div class="col mb-2">
                        <label for="emailBackdrop" class="form-label"><i class="fas fa-sort-numeric-up-alt"></i> <strong>Session Name</strong></label>
                        <input type="text" id="emailBackdrop" name="SessionName" class="form-control rounded-pill" placeholder="Example: Session 1">
                        <span asp-validation-for="SessionName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row g-2">
                    <div class="col mb-2">
                        <label for="dobBackdrop" class="form-label"><i class="fas fa-signature"></i> <strong>Quiz Name</strong></label>
                        <input type="text" id="dobBackdrop" name="QuizName" class="form-control rounded-pill" placeholder="Example: Quiz 1">
                    </div>
                </div>
               

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary rounded-pill">Save</button>
            </div>
        </form>
    </div>
</div>


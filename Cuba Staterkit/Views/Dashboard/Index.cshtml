@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title" style="margin-top: -29px !important;">
            <div class="row">
                <div class="col-6">
                    <h3>Dashboard</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Dashboard</li>
                        
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row widget-grid">

            <div class="col-xxl-4 col-xl-6 col-sm-6 box-col-6">
                <div class="card profile-box">
                    <div class="card-body">
                        <div class="media" style="margin-bottom:10% !important">
                            <div class="media-body">
                                <div class="greeting-user">
                                    <h4 class="f-w-600">Welcome to Dashboard !!</h4>
                                    <p> You can create your own Assessments</p>
                                   
                                </div>
                            </div>
                           
                        </div>
                        <div class="cartoon"><img class="img-fluid" src="~/assets/images/dashboard/cartoon.svg" alt="vector women with leptop"></div>
                    </div>
                </div>
            </div>

            <div class="col-xl-6">

                <div class="card">
                    <div class="card-header card-no-border">
                        <div class="header-top">
                            <h5>Total Published Assesments</h5>
                           
                        </div>
                    </div>

                    <div class="card-body pt-0">
                        <ul class="user-list">
                            <li>
                                <div class="user-icon primary">
                                    <div class="user-box"><i class="font-primary" data-feather="user-minus"></i></div>
                                </div>
                                <div>
                                    <h5 class="mb-1">Quizes</h5><span class="font-primary d-flex align-items-center"><i class="far fa-file me-1"></i>  <span class="f-w-500">+22</span></span>
                                </div>
                            </li>
                            <li>
                                <div class="user-icon success">
                                    <div class="user-box"><i class="font-success" data-feather="user-minus"></i></div>
                                </div>
                                <div>
                                    <h5 class="mb-1">Homeworks</h5><span class="font-primary d-flex align-items-center"><i class="far fa-file me-1"></i> <span class="f-w-500">+30</span></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>


          
            <div class="col-xxl-6 col-xl-5 col-md-6 col-sm-7 notification box-col-6">
                <div class="card height-equal">
                    <div class="card-header card-no-border">
                        <div class="header-top">
                            <h5 class="m-0">Activity Log</h5>
                          
                        </div>
                    </div>
                    <div class="card-body pt-0 mb-5">
                        <ul>
                            <li class="d-flex">
                                <div class="activity-dot-primary"></div>
                                <div class="w-100 ms-3">
                                    <p class="d-flex justify-content-between mb-2"><span class="date-content light-background">9th Feb, 2024 </span><span>Today</span></p>
                                    <h6>Session Physics 1<span class="dot-notification"></span></h6>
                                    <p class="f-light">Physics <strong>Session 1 </strong> has been Created</p>
                                </div>
                            </li>
                            <li class="d-flex">
                                <div class="activity-dot-warning"></div>
                                <div class="w-100 ms-3">
                                    <p class="d-flex justify-content-between mb-2"><span class="date-content light-background">9th Feb, 2024 </span><span>Today</span></p>
                                    <h6>Quiz 1<span class="dot-notification"></span></h6>
                                    <p>Quiz 1 Assigned to <strong>Session 1 </strong> </p>
                                </div>
                            </li>
                            <li class="d-flex">
                                <div class="activity-dot-secondary"></div>
                                <div class="w-100 ms-3">
                                    <p class="d-flex justify-content-between mb-2"><span class="date-content light-background">9th Feb, 2024 </span><span>Today</span></p>
                                    <h6>Homework 1<span class="dot-notification"></span></h6>
                                    <p>Homework 1 Assigned to <strong>Session 1 </strong> </p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

          
           
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 box-col-6 wow zoomIn">
                <div class="card purchase-card">
                    <img class="img-fluid" src="~/assets/images/dashboard/exam.png" alt="vector mens with leptop">
                    <div class="card-body pt-3">
                        <h6 class="mb-3">Create <a href="#">Your Own </a>Quizes & HomeWorks</h6><a class="purchase-btn btn btn-primary btn-hover-effect f-w-500" href="#">Create Now</a>
                    </div>
                </div>
            </div>
           
           
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
@section Script{
    <script src="../assets/js/sidebar-menu.js"></script>
    <script src="../assets/js/clock.js"></script>
